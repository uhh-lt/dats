{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "webRoot": "${workspaceFolder}",
      "url": "http://localhost:3000"
    },
    {
      "name": "Python: main.py",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/backend/src/main.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend/src",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend/src",
        "HUGGINGFACE_HUB_CACHE": "${workspaceFolder}/docker/models_cache",
        "TRANSFORMERS_CACHE": "${workspaceFolder}/docker/models_cache",
        "TORCH_HOME": "${workspaceFolder}/docker/models_cache"
      }
    },
    {
      "name": "Celery",
      "type": "node-terminal",
      "request": "launch",
      "command": "conda activate dwts && celery -A app.celery.background_jobs.tasks worker -Q bgJobsQ,celery -P threads -l info -c 1 --without-gossip --without-mingle --without-heartbeat",
      "cwd": "${workspaceFolder}/backend/src",
      "envFile": "${workspaceFolder}/backend/.env"
    },
    {
      "name": "Python: Test",
      "type": "node-terminal",
      "request": "launch",
      "command": "pytest",
      "cwd": "${workspaceFolder}/backend/src",
      "envFile": "${workspaceFolder}/backend/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend/src"
      }
    },
    {
      "name": "Python: run_migrations.py",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/backend/src/run_migrations.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend/src",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend/src"
      }
    },
    {
      "name": "Alembic: check",
      "type": "node-terminal",
      "request": "launch",
      "command": "micromamba activate dwts && alembic check",
      "cwd": "${workspaceFolder}/backend/src",
      "envFile": "${workspaceFolder}/backend/.env"
    },
    {
      "name": "Alembic: revision",
      "type": "node-terminal",
      "request": "launch",
      "command": "micromamba activate dwts && alembic revision --autogenerate -m \"vscode launcher\"",
      "cwd": "${workspaceFolder}/backend/src",
      "envFile": "${workspaceFolder}/backend/.env"
    }
  ]
}
